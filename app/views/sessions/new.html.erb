    <style>
      /* もとのスタイルを反映 */
      input, textarea, select, .uneditable-input {
        border: 1px solid #bbb;
        width: 100%;
        margin-bottom: 15px;
        box-sizing: border-box; /* SCSSの@mixin box_sizing の代替 */
      }
      input {
        height: auto !important;
      }
    </style>
  </head>

    <div class="flex items-center justify-center min-h-screen">
      <div class="w-full max-w-md p-8 bg-white rounded">

        <!-- タイトル -->
        <h1 class="mb-6 text-2xl font-bold text-center">Log in</h1>
        <!-- テストユーザーでログイン -->
        <%= button_to 'テストユーザーでログイン', guest_login_path, class: "w-full px-4 py-2 font-bold text-white transition-colors bg-yellow-500 rounded hover:bg-yellow-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>


        <!-- Rails のフォーム -->
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <%= form_with(url: login_with_cookie_path, scope: :session, local: true) do |f| %>
              
              <!-- name -->
              <div class="mb-4">
                <%= f.label :name, nil, class: "block mb-1 font-medium text-gray-700" %>
                <%= f.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
              </div>

              <!-- password -->
              <div class="mb-4">
                <%= f.label :password, nil, class: "block mb-1 font-medium text-gray-700" %>
                <%= f.password_field :password, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
              </div>

              <!-- ログインボタン -->
              <%= f.submit "Log in", class: "w-full px-4 py-2 font-bold text-white transition-colors bg-yellow-500 rounded hover:bg-yellow-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
            <% end %>
            
            <!-- サインアップへのリンク -->
            <p class="mt-4">
              New user?
              <%= link_to "Sign up now!", signup_path, class: "text-blue-500 hover:underline" %>
            </p>




            

          </div>
        </div>
      </div>
    </div>
