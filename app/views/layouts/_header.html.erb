<style>
.nav-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0.5rem 1rem; /* ナビゲーションバーの余白 */
}

.nav-section .logo {
  height: 35px; /* ロゴのサイズ調整 */
}

.nav-section .nav-links {
  flex: 1; /* ナビゲーションリンクを中央に寄せるための調整 */
  text-align: center;
}

.nav-section .spacer {
  flex: 1; /* 空のスペースでロゴとナビゲーションのバランスを取る */
}

.nav-section .nav-links button {
  margin: 0 0.25rem; /* 各ボタン間の余白を調整 */
}
</style>
<div class="d-flex align-items-center justify-content-between" id="nav-section">
   <!-- ロゴ -->
   <div class="logo-container m-1">
   <%= link_to root_path, class: "logo-link" do %>
    <%= image_tag("logo01.png", class: "logo") %>
   <% end %>
  </div>


  <!-- 右上に固定するために "fixed top-4 right-4 z-50" を指定 -->
  <!-- fixedで固定 absoluteで流れていく。-->
<div class="absolute top-2 right-2 z-50">
  <!-- 必要に応じて relative をつける場合もある (JSライブラリが想定している場合など) -->
  <button
    id="dropdownButton"
    data-dropdown-toggle="dropdownMenu"
    class="px-4 py-2 bg-white-600 rounded-md focus:ring-0"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      class="size-6"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
      />
    </svg>
  </button>

  <!-- Dropdownメニュー。ボタンに対して絶対配置 (absolute) で、右揃え (right-0) と上下の余白調整 (mt-2) -->
  <div
    id="dropdownMenu"
    class="hidden absolute right-0 mt-2 z-50 w-30 bg-white rounded-md shadow-lg"
  >
    <ul class="py-1 text-gray-700">
      <li>
        <button class="p-3 hover:bg-yellow-500">
          <%= link_to root_path, class: "text-dark text-decoration-none d-flex align-items-center", data: { turbo: false } do %>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 20 20"
              fill="currentColor"
              class="size-5"
            >
              <path
                fill-rule="evenodd"
                d="M9.293 2.293a1 1 0 0 1 1.414 0l7 7A1 1 0 0 1 17 11h-1v6a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1v-3a1 1 0 0 0-1-1H9a1 1 0 0 0-1 1v3a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1v-6H3a1 1 0 0 1-.707-1.707l7-7Z"
                clip-rule="evenodd"
              />
            </svg>
          <% end %>
        </button>
      </li>

      <li>
        <button class="p-3 hover:bg-yellow-500">
          <%= link_to(
                current_user ? current_user : login_path,
                class: "text-dark text-decoration-none",
                data: { turbo: false }
              ) do %>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 20 20"
              fill="currentColor"
              class="size-5"
            >
              <path
                d="M10 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM3.465 14.493a1.23 1.23 0 0 0 .41 1.412A9.957 9.957 0 0 0 10 18c2.31 0 4.438-.784 6.131-2.1.43-.333.604-.903.408-1.41a7.002 7.002 0 0 0-13.074.003Z"
              />
            </svg>
          <% end %>
        </button>
      </li>

      <li>
      <button class="p-3 hover:bg-yellow-500">
        <%= link_to(
              books_path,
              class: "text-dark text-decoration-none",
              data: { turbo: false }
            ) do %>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
  <path d="M11.25 4.533A9.707 9.707 0 0 0 6 3a9.735 9.735 0 0 0-3.25.555.75.75 0 0 0-.5.707v14.25a.75.75 0 0 0 1 .707A8.237 8.237 0 0 1 6 18.75c1.995 0 3.823.707 5.25 1.886V4.533ZM12.75 20.636A8.214 8.214 0 0 1 18 18.75c.966 0 1.89.166 2.75.47a.75.75 0 0 0 1-.708V4.262a.75.75 0 0 0-.5-.707A9.735 9.735 0 0 0 18 3a9.707 9.707 0 0 0-5.25 1.533v16.103Z" />
</svg>

        <% end %>
      </button>
    </li>

   

      <li>
        <button class="p-3 hover:bg-yellow-500">
          <%= link_to about_path, class: "text-dark text-decoration-none", data: { turbo: false } do %>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
  <path fill-rule="evenodd" d="M18 10a8 8 0 1 1-16 0 8 8 0 0 1 16 0ZM8.94 6.94a.75.75 0 1 1-1.061-1.061 3 3 0 1 1 2.871 5.026v.345a.75.75 0 0 1-1.5 0v-.5c0-.72.57-1.172 1.081-1.287A1.5 1.5 0 1 0 8.94 6.94ZM10 15a1 1 0 1 0 0-2 1 1 0 0 0 0 2Z" clip-rule="evenodd" />
</svg>

          <% end %>
        </button>
      </li>

      <% if current_user %>
        <li>
          <%= button_to(
                logout_path,
                method: :delete,
                class: "p-3 hover:bg-yellow-500 text-dark text-decoration-none",
                form: { style: "display: inline;" },
                data: { confirm: "ログアウトしますか？" }
              ) do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgba(0, 0, 0, 1);transform: ;msFilter:;"><path d="M18 2H6a1 1 0 0 0-1 1v9l5-4v3h6v2h-6v3l-5-4v9a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V3a1 1 0 0 0-1-1z"></path></svg>             
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>


<!--これがないと、logoの位置が下がってしまう。 -->
<div class="spacer"></div>
</div>

<% flash.each do |message_type, message| %>
  <%# message_type は :notice, :alert, :success, :error 等が入る可能性があります %>

  <% css_classes = case message_type.to_sym
    when :notice
      # 例えば notice は緑
      "mb-4 p-4 border-l-4 border-green-500 bg-green-50 text-green-700"
    when :alert
      # 例えば alert は赤
      "mb-4 p-4 border-l-4 border-red-500 bg-red-50 text-red-700"
    when :error
      # error として別途分けたい場合
      "mb-4 p-4 border-l-4 border-red-500 bg-red-50 text-red-700"
    when :success
      # success として分けたい場合
      "mb-4 p-4 border-l-4 border-green-500 bg-green-50 text-green-700"
    else
      # 上記以外は青系にでもしておく
      "mb-4 p-4 border-l-4 border-blue-500 bg-blue-50 text-blue-700"
    end
  %>

  <div class="<%= css_classes %>">
    <%= message %>
  </div>
<% end %>


