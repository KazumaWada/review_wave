<h1 class="mt-5 text-center text-4xl font-medium">draft</h1>

<% @microposts.draft.each do |micropost| %>   

  <div class="mt-5 p-4 ml-3 mr-3 rounded border shadow-md hover:shadow-lg transition-shadow duration-300">
    <!-- Username and date on the first line -->
  
    <div class="flex items-center text-left font-bold">
      <span><%= micropost.user.name %></span>
      <span class="text-gray-500 text-sm ml-2"><%= micropost.created_at.strftime("%Y/%m/%d") %></span>
    </div>
    
    <!-- Content on the second line -->
    <div class="text-left mt-2">
      <%= simple_format(micropost.content) %>
    </div>
    <div class="flex justify-end items-center space-x-2">
  <%= link_to "edit",
              draft_edit_path(slug: @user.slug, id: micropost.id),
              class: "btn btn-mute" %> 
  <%= button_to "🗑️",
                micropost_path(slug: @user.slug, id: micropost.id),
                method: :delete,
                class: "btn btn-sm" %>
</div>

  
  </div>
  <% end %>

<div>
  <div class="text-center mt-4">
    <%= image_tag("draft.png", class: "mx-auto max-w-[320px] h-auto rounded-lg") %>
  </div>
</div>


</div>
</div>
</div>
  
  


  
  