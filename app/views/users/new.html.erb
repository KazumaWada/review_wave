<style>
/* もとのスタイルを反映 */
input, textarea, select, .uneditable-input {
  border: 1px solid #bbb;
  width: 100%;
  margin-bottom: 15px;
  box-sizing: border-box; /* @include box_sizing; の代わりに追加 */
}
input {
  height: auto !important;
}
</style>

<div class="flex items-center justify-center min-h-screen">
<div class="w-full max-w-md p-8 bg-white rounded">
  <h1 class="mb-6 text-2xl font-bold text-center">Sign up</h1>

  <!-- Rails のフォーム -->
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@user) do |f| %>
        <!-- エラーメッセージなどを部分テンプレートで出す場合 -->
        <%= render 'shared/error_messages' %>

        <!-- name -->
        <div class="mb-4">
          <%= f.label :name, nil, class: "block mb-1 font-medium text-gray-700" %>
          <%= f.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <!-- email -->
        <div class="mb-4">
          <%= f.label :email, nil, class: "block mb-1 font-medium text-gray-700" %>
          <%= f.email_field :email, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <!-- password -->
        <div class="mb-4">
          <%= f.label :password, nil, class: "block mb-1 font-medium text-gray-700" %>
          <%= f.password_field :password, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <!-- password confirmation -->
        <div class="mb-6">
          <%= f.label :password_confirmation, "Confirmation", class: "block mb-1 font-medium text-gray-700" %>
          <%= f.password_field :password_confirmation, class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <!-- 送信ボタン -->
        <%= f.submit "Create my account", class: "w-full px-4 py-2 font-bold text-white transition-colors bg-yellow-500 rounded hover:bg-yellow-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
      <% end %>
    </div>
  </div>
</div>
</div>
